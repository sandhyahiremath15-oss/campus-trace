
{
  "entities": {
    "CampusItem": {
      "title": "Campus Item",
      "description": "A lost or found item reported on campus",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "Brief title of the item"
        },
        "description": {
          "type": "string",
          "description": "Detailed description of the item"
        },
        "category": {
          "type": "string",
          "description": "Category of the item (electronics, apparel, etc.)"
        },
        "location": {
          "type": "string",
          "description": "Where the item was lost or found"
        },
        "type": {
          "type": "string",
          "enum": ["lost", "found"],
          "description": "Whether the item is lost or found"
        },
        "status": {
          "type": "string",
          "enum": ["open", "matched", "closed"],
          "description": "Lifecycle status of the report"
        },
        "imageUrl": {
          "type": "string",
          "description": "Base64 encoded image data or image URL"
        },
        "userId": {
          "type": "string",
          "description": "The UID of the user who created the report"
        },
        "posterName": {
          "type": "string",
          "description": "Name of the person who reported it"
        },
        "posterEmail": {
          "type": "string",
          "description": "Email of the person who reported it"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO timestamp of when the report was created"
        }
      },
      "required": [
        "title",
        "description",
        "category",
        "location",
        "type",
        "status",
        "userId",
        "createdAt"
      ]
    },
    "User": {
      "title": "User Profile",
      "description": "Registered user profile details",
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "profileImage": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      }
    },
    "Match": {
      "title": "Item Match",
      "description": "A confirmed match between a lost and found item",
      "type": "object",
      "properties": {
        "lostItemId": { "type": "string" },
        "foundItemId": { "type": "string" },
        "matchedAt": { "type": "string", "format": "date-time" },
        "status": {
          "type": "string",
          "enum": ["pending", "approved", "rejected"]
        }
      }
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/items/{itemId}": {
      "schema": "CampusItem",
      "description": "Collection of all lost and found item reports"
    },
    "/users/{userId}": {
      "schema": "User",
      "description": "User profile collection"
    },
    "/matches/{matchId}": {
      "schema": "Match",
      "description": "Collection of identified item matches"
    }
  }
}
